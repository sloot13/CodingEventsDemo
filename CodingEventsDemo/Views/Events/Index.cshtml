<h1>Coding Events</h1>


@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}

<p>
    <a asp-controller="Events" asp-action="Add1">Add Event</a>
</p>
     
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (KeyValuePair<string, string> meeting in ViewBag.events)
        {
            <tr>
                <td>@meeting.Key</td>
                <td>@meeting.Value</td>
            </tr>
        }
    </tbody>
</table>